<Window x:Class="DebtBook.DebterLog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtBook"
        mc:Ignorable="d"
        Title="DebtorLog" Height="450" Width="457.509">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView x:Name="listView" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Grid.Column ="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="19,130,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20"/>
        <Button x:Name="AddValButton" Content="Add value" Command="{Binding Path=AddValue}" HorizontalAlignment="Left" Margin="19,79,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20"/>
        <TextBox x:Name="ValuetextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Value" VerticalAlignment="Top" Grid.Column="1" Padding="10"/>
    </Grid>
</Window>
